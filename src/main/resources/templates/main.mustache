<html>
<head>
    <link href="webjars/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet">
    <script src="webjars/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <title>Getting Started: Serving Web Content</title>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>
</head>
<body>
<div class="container">
    <div>
        <form action="/logout" method="post">
            <input type="hidden" name="_csrf" value="{{_csrf.token}}"/>
            <input class="btn btn-danger" type="submit" value="Sign Out"/>
        </form>
    </div>
    <div>
        <form method="post" name="drugDto">
            <input type="text" name="name" placeholder="Введите name"/>
            <input type="text" name="instruction" placeholder="Введите instruction"/>
            <select type="text" name="classificationId">
                <option>Вберите classification</option>
                <option value="1">A</option>
                <option value="2">B</option>
                <option value="3">C</option>
                <option value="4">D</option>
                <option value="5">G</option>
                <option value="6">H</option>
                <option value="7">J</option>
                <option value="8">L</option>
                <option value="9">M</option>
                <option value="10">N</option>
                <option value="11">P</option>
                <option value="12">R</option>
                <option value="13">S</option>
                <option value="14">V</option>
            </select>
            <!--<input type="text" name="classificationId" placeholder="Введите id_purpose"/>-->
            <input type="hidden" name="_csrf" value="{{_csrf.token}}"/>
            <button class="btn btn-primary" type="submit">Add</button>
        </form>
    </div>
    <div>Список</div>
    <form method="post" action="filter">
        <input type="name" name="filter">
        <input type="hidden" name="_csrf" value="{{_csrf.token}}"/>
        <button class="btn btn-primary" type="submit">Search</button>
    </form>
    <!-- КОСТИЛЬ для показать оп'ять-->
    <form method="get" action="main">
        <button class="btn btn-primary" type="submit">Show all</button><!-- КОСТИЛЬ для показать оп'ять-->
    </form>
    <!-- КОСТИЛЬ для показать оп'ять-->
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Name</th>
            <th>Instruction</th>
        </tr>
        </thead>
        <tbody>
        {{#page}}
            <tr>
                <td>{{name}}</td>
                <td><a href="{{instruction}}">instruction</a></td>
                <input type="hidden" name="_csrf" value="{{_csrf.token}}"/>
            </tr>
        {{/page}}
        </tbody>
    </table>
    <!-- ПАГІНАТОР-->
    <nav aria-label="Page navigation example">
        <ul class="pagination">
            <li class="page-item disabled">
                <a class="page-link" href="#" tabindex="-1">Страницы</a>
            </li>
            {{#pageDto}}
                <li class="page-item"><a class="page-link" href="{{url}}">{{number}}</a></li>
            {{/pageDto}}
        </ul>
    </nav>
</div>
</body>
</html>