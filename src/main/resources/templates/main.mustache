<html>
<head>
    <link href="/webjars/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet">
    <script src="/webjars/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <title>Getting Started: Serving Web Content</title>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>
</head>
<body>
<div class="container">
    <div>
        <form action="/logout" method="post">
            <input type="hidden" name="_csrf" value="{{_csrf.token}}"/>
            <input class="btn btn-danger" type="submit" value="Sign Out"/>
        </form>
    </div>
    <div>Список</div>
    <form method="post" action="filter">
        <input type="name" name="filter">
        <input type="hidden" name="_csrf" value="{{_csrf.token}}"/>
        <button class="btn btn-primary" type="submit">Search</button>
    </form>
    <!-- КОСТИЛЬ для показать оп'ять-->
    <form method="get" action="main">
        <button class="btn btn-primary" type="submit">Show all</button><!-- КОСТИЛЬ для показать оп'ять-->
    </form>

    <table class="table table-striped">
        <thead>
        <tr>
            <th>Name</th>
            <th>Instruction</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {{#page}}
            <tr>
                <td>{{name}}</td>
                <td><a href="{{instruction}}">instruction</a></td>
                <form action="/addr">
                    <input type="hidden" name="name" value={{name}}>
                    <input type="hidden" name="id" value={{id}}>
                    <td>
                        <button class="btn btn-primary" type="submit">add</button>
                    </td>
                    <input type="hidden" name="_csrf" value="{{_csrf.token}}"/></form>
            </tr>
        {{/page}}
        </tbody>
    </table>
    <!-- ПАГІНАТОР-->
    <nav aria-label="Page navigation example">
        <ul class="pagination">
            <li class="page-item disabled">
                <a class="page-link" href="#" tabindex="-1">Страницы</a>
            </li>
            {{#pageDto}}
                <li class="page-item"><a class="page-link" href="{{url}}">{{number}}</a></li>
            {{/pageDto}}
        </ul>
    </nav>
</div>
</body>
</html>